# Medicine Stock Management System - Environment Variables
# Copy this file to .env and update the values according to your setup

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Choose either 'postgresql' or 'mysql'
DATABASE_ENGINE=postgresql

# PostgreSQL Settings (if using PostgreSQL)
DB_NAME=medicine_stock_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# MySQL Settings (if using MySQL)
# DB_NAME=medicine_stock_db
# DB_USER=root
# DB_PASSWORD=your_password_here
# DB_HOST=localhost
# DB_PORT=3306

# Email Configuration (for password reset)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=Medicine Stock System <your_email@gmail.com>

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Static Files (for production)
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/medicine_stock.log